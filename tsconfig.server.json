{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "build/server",
    "baseUrl": "src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "target": "es6"
  },
  "include": [
    "src/server"
  ],
  "exclude": [
    "src/client"
  ]
}
